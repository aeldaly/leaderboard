<h1 class='page-header'>History</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Result</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |date, games| %>
      <% games.each do |game| %>
        <tr>
          <td><%= date %></td>
          <td><%= game[:opponent] %></td>
          <td><%= game[:score] %></td>
          <td><%= game[:result] %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

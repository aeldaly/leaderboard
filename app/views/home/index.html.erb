<h1 class='page-header'>Leaderboard</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Email</th>
      <th>Score</th>
      <th>Games Played</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.email %></td>
        <td><%= user.rating %></td>
        <td><%= user.games.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
